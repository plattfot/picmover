pkgname=picmover
pkgver=0.1.1
pkgrel=1
epoch=
pkgdesc="Image and video importer/organizer."
arch=('any')
url="https://bitbucket.org/plattfot/picmover"
license=('GPL3')
groups=()
depends=('hachoir-metadata' 'python2-gobject2')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=ChangeLog
source=('git+https://bitbucket.org/plattfot/picmover.git#tag=v$pkgver')
noextract=()
md5sums=() #generate with 'makepkg -g'

